			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>OG_Ork_PlayerColony</factionDef>
			</playerFaction>
			<parts>
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>5</pawnCount>
				</li>
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>

	<ScenarioDef>
		<defName>OG_Ork_Feral_Tribe</defName>
		<label>IGNORE</label>
		<description>Old scenario left for compatability only</description>
		<scenario>
			<enabled>False</enabled>
			<summary>Old scenario left for compatability only.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>OG_Ork_PlayerColony</factionDef>
			</playerFaction>
			<parts>
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>5</pawnCount>
				</li>
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>


</Defs>